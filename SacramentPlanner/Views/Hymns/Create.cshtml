@model SacramentPlanner.Models.Hymn

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Add A New Hymn</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MeetingProgramID" class="form-control" />
            <div class="form-group">
                <label asp-for="hymnNumber" class="control-label"></label>
                <input asp-for="hymnNumber" class="form-control" />
                <span asp-validation-for="hymnNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="location" class="control-label"></label>
                <select asp-for="location" asp-items="Html.GetEnumSelectList<HymnLocation>()" class="form-control"></select>
                <span asp-validation-for="location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="MeetingPrograms" asp-action="Details" asp-route-id="@Model.MeetingProgramID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
