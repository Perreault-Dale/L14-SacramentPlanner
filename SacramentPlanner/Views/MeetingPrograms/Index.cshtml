@model IEnumerable<SacramentPlanner.Models.MeetingProgram>
@{
    ViewData["Title"] = "Index";
}
<h2>Index</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParam"]">@Html.DisplayNameFor(model => model.programDate)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conduct)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preside)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sacrament)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.programDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Conduct)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Preside)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sacrament)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
